---
import Layout from '../layouts/Layout.astro'
import pfp from '../assets/pfp.jpg'
import Section from '../components/Section.astro'
import Projects from '../components/Projects.astro'
import Footer from '../components/Footer.astro'
import SectionDivider from '../components/SectionDivider.astro'
---

<Layout title="Maksymilian Zadka">
	<main>
		<Section title="name">
			<div
				class="flex flex-col justify-between gap-10 animate-in fade-in-25 duration-700 md:flex-row md:items-center"
			>
				<div class="animate-in slide-in-from-left duration-500">
					<p class="font-mono text-lg text-gray-600 dark:text-gray-400">Hi! My name is</p>
					<h1 class="mt-8 font-sans text-6xl font-semibold dark:text-white">Maksymilian Zadka</h1>
					<h2 class="mt-4 font-sans text-4xl font-semibold text-gray-600 dark:text-gray-400">
						I'm a frontend developer
					</h2>
				</div>
				<img
					src={pfp.src}
					alt="Maksymilian Zadka"
					class="w-full rounded-2xl animate-in slide-in-from-right duration-500 md:w-1/3"
				/>
			</div>
		</Section>
		<SectionDivider />
		<Section title="projects">
			<h2 class="mb-10 text-4xl font-semibold dark:text-white">My projects</h2>
			<Projects />
		</Section>
	</main>
	<Footer />
</Layout>
